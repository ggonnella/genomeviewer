<% form_tag :action => "send_password_recovery_email" do%>
  <table>
    <tr>
      <td>Enter the email address you used for your account:</td>
    </tr>
    <tr>
      <td><%= text_field :user, :email,
                                :size => 48,
                                :value => flash[:email],
                                :class => "nice" %></td>
    </tr>
    <tr>
      <td><%=submit_tag "Recover password"%></td>
    </tr>
  </table>
<% end %>
