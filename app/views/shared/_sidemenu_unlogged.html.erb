<ul>
<% form_tag(login_url({:back_to => params})) do -%>
  <li>Username:</li>
  <li><%= text_field :user, 
                     :username, 
                     :maxlength => 64,
                     :size => 20,
                     :class => "nice" %></li>
  <li>Password:</li>
  <li><%= password_field :user,
                         :password,
                         :maxlength => 64,
                         :size => 20,
                         :class => "nice" %></li>
  <li><%=submit_tag "Login"%></li>
<% end -%>
  <li><%= link_to "Register", registration_url %></li>
  <li><%= link_to "Browse Files", public_files_url %></li>
  <li><%= link_to "I forgot my<br/>password!", recover_password_url %></li>
</ul>