  <h1>Login</h1>
  <% form_tag({:action=>"do_login"}) do %>
   <table>
    <tr>
     <td>Email:</td>
     <td><%= text_field_tag "email", nil, :maxlength=>64 %></td>
    </tr>
    <tr>
     <td>Password:</td>
     <td><%= password_field_tag "password", nil, :maxlength=>64 %></td>
    </tr>
    <tr>
     <td colspan="2"><%=submit_tag "Login"%></td>
    </tr>
   <table>
  <% end %>
