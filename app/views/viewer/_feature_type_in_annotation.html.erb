<% ftn = feature_type_in_annotation.feature_type.name -%>
<tr>
  <td>
    <strong><%= ftn %></strong>
  </td>
  <td>
    - show? <%= check_box_tag "ft[#{ftn}][show]", true, 
                  @ft_settings[ftn][:show]!=0, 
                  :class => "ft_table_cb",
                  :onclick => ft_cb_show_clicked(ftn) %> 
            <%= hidden_field_tag "ft[#{ftn}][show]", nil -%>
                  
    (up to <%= text_field_tag "ft[#{ftn}][max_show_width]", 
                 @ft_settings[ftn][:show], :size => 10, 
                 :class => "nice ft_table_text",
                 :disabled => @ft_settings[ftn][:show]==0 %> nt)
    - show caption? <%= check_box_tag "ft[#{ftn}][capt]", true, 
                          @ft_settings[ftn][:capt]!=0, 
                          :class => "ft_table_cb",
                          :onclick => ft_cb_capt_clicked(ftn),
                          :disabled => @ft_settings[ftn][:show]==0 %> 
            <%= hidden_field_tag "ft[#{ftn}][capt]", nil -%>
                          
    (up to <%= text_field_tag "ft[#{ftn}][max_capt_show_width]", 
                 @ft_settings[ftn][:capt], :size => 10, 
                 :class => "nice ft_table_text",
                 :disabled => @ft_settings[ftn][:capt]==0 %> nt)
  </td>
</tr>