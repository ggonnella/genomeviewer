#!/usr/bin/env ruby

require 'drb'

if ARGV.size != 1 then
  raise "Usage: gt_server_test gff3_file"
end

gff3_file = ARGV[0]

DRb.start_service
GTServer = DRbObject.new(nil, 'druby://localhost:7777')

puts GTServer.test_call()

errormsg = GTServer.validate_file(gff3_file)
if errormsg then
  raise "Error: #{errormsg}"
end

config_1 = GTServer.config_object_for_user(1)
config_2 = GTServer.config_object_for_user(2)

puts "config_1 margins=#{config_1.get_cstr("format", "margins")}"
puts "config_2 margins=#{config_2.get_cstr("format", "margins")}"

puts "set config_1 margins=20"
config_1.set_cstr("format", "margins", 20.to_s);

puts "config_1 margins=#{config_1.get_cstr("format", "margins")}"
puts "config_2 margins=#{config_2.get_cstr("format", "margins")}"

=begin
seqids = GTServer.get_sequence_regions(gff3_file)
seqids.each do |seq_id|
  range = GTServer.get_range_for_sequence_region(gff3_file, seq_id)
  png_stream = GTServer.get_image_stream(gff3_file, seq_id, range.first,
                                         range.last, config, 800, false)
  puts "png_stream.size=" + png_stream.size.to_s
end

puts GTServer.test_call()
=end
